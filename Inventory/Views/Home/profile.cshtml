@model Inventory.Core.ProfileDataViewModel
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    <body>
		

	
	
		 
		<!-- Main Wrapper -->
        <div class="main-wrapper">
			
		
			<div class="page-wrapper">
				<div class="content">
					<div class="page-header">
						<div class="page-title">
							<h4>Profile</h4>
							<h6>User Profile</h6>
						</div>
					</div>
					<!-- /product list -->
					<div class="card">
						<div class="card-body">
						<form asp-action="Profile" asp-controller="Home" method="post">
								<div class="profile-set">
									<div class="profile-head">

									</div>
									<div class="profile-top">
										<div class="profile-content">
											<div class="profile-contentimg">
												<img src="~/img/customer/customer5.jpg" alt="img" id="blah">
												<div class="profileupload">
													<input type="file" id="imgInp">
													<a href="javascript:void(0);" ><img src="~/img/icons/edit-set.svg"  alt="img"></a>
												</div>
											</div>
											<div class="profile-contentname">
											<h2>@HttpContextAccessor.HttpContext.Session.GetString("UserName")</h2>
												<h4>Updates Your Photo and Personal Details.</h4>
											</div>
										</div>
										<div class="ms-auto">
											<button type="submit" class="btn btn-submit me-2">Save</button>
											<a asp-action="Index" asp-controller="Home" class="btn btn-cancel">Cancel</a>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-lg-6 col-sm-12">
										<div class="form-group">
											<label>First Name</label>
											<input asp-for="FirstName" type="text" placeholder="William">
										</div>
									</div>
									<div class="col-lg-6 col-sm-12">
										<div class="form-group">
											<label>Last Name</label>
										<input asp-for="LastName"  type="text" placeholder="Castilo">
										</div>
									</div>
									<div class="col-lg-6 col-sm-12">
										<div class="form-group">
											<label>Email</label>
											<input asp-for="Email" type="text" placeholder="william@example.com">
										</div>
									</div>
									<div class="col-lg-6 col-sm-12">
										<div class="form-group">
											<label>Phone</label>
										<input asp-for="MobileNo" type="text" placeholder="+1452 876 5432">
										</div>
									</div>
									@*<div class="col-lg-6 col-sm-12" style="">
										<div class="form-group">
											<label>User Name</label>
											<input asp-for="FullName"  type="text" placeholder="+1452 876 5432">
										</div>
									</div>
									<div class="col-lg-6 col-sm-12">
										<div class="form-group">
											<label>Password</label>
											<div class="pass-group">
											<input asp-for="Password"  type="password" class=" pass-input">
												<span class="fas toggle-password fa-eye-slash"></span>
											</div>
										</div>*@
									@*</div>*@
									<div class="col-12">
										<button type="submit" class="btn btn-submit me-2">Submit</button>
										<a asp-action="Index" asp-controller="Home" class="btn btn-cancel">Cancel</a>
									</div>
								</div>
						`	</form>
						</div>
					</div>
					<!-- /product list -->
				</div>
			</div>
        </div>

		
		<!-- /Main Wrapper -->
		 
		<!-- jQuery -->
        <script src="~/js/jquery-3.6.0.min.js"></script>

        <!-- Feather Icon JS -->
		<script src="~/js/feather.min.js"></script>

		<!-- Slimscroll JS -->
		<script src="~/js/jquery.slimscroll.min.js"></script>

		<!-- Datatable JS -->
		<script src="~/js/jquery.dataTables.min.js"></script>
		<script src="~/js/dataTables.bootstrap4.min.js"></script>
		
		<!-- Bootstrap Core JS -->
        <script src="~/js/bootstrap.bundle.min.js"></script>

		<!-- Select2 JS -->
		<script src="~/plugins/select2/js/select2.min.js"></script>

		<!-- Sweetalert 2 -->
		<script src="~/plugins/sweetalert/sweetalert2.all.min.js"></script>
		<script src="~/plugins/sweetalert/sweetalerts.min.js"></script>

		<!-- Custom JS -->
		<script src="~/js/script.js"></script>
		
    </body>
