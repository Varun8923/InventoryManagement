@{
    Layout = null;
}
@model Inventory.Core.LoginandRegistration

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
        <meta name="description" content="POS - Bootstrap Admin Template">
		<meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, invoice, html5, responsive, Projects">
        <meta name="author" content="Dreamguys - Bootstrap Admin Template">
        <meta name="robots" content="noindex, nofollow">
        <title>Login - Pos admin template</title>
		
		<!-- Favicon -->
        <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">
		
		<!-- Bootstrap CSS -->
        <link rel="stylesheet" href="~/css/bootstrap.min.css">
		
        <!-- Fontawesome CSS -->
		<link rel="stylesheet" href="~/plugins/fontawesome/css/fontawesome.min.css">
		<link rel="stylesheet" href="~/plugins/fontawesome/css/all.min.css">
		
		<!-- Main CSS -->
        <link rel="stylesheet" href="~/css/style.css">
		
    </head>
    <body class="account-page">
	
		 
		<!-- Main Wrapper -->
        <div class="main-wrapper">
			<div class="account-content">
				<div class="login-wrapper">
                    <div class="login-content">
                        <div class="login-userset">
                            <div class="login-logo logo-normal">
                                <img src="~/img/logo.png" alt="img"/>
                            </div>
							<a asp-action="Index" asp-controller="Home" class="login-logo logo-white">
								<img src="~/img/logo-white.png"  alt="">
							</a>
                            <div class="login-userheading">
                                <h3>Create an Account</h3>
                                <h4>Continue where you left off</h4>
                            </div>
                            <form asp-controller="Pages" asp-action="SignUp" method="post">
                                <div class="form-login">
                                        <label>Full Name</label>
                                        <div class="form-addons">
                                            <input type="text" asp-for="FullName"   placeholder="Enter your full name">
                                            <img src="~/img/icons/users1.svg" alt="img"/>
                                        </div>
                                        <span class="text-danger" asp-validation-for="FullName"></span>
                                    </div>
                                <div class="form-login">
                                    <label>Designation</label>
                                    <select class="form-addons" style="height:40px; width: 480px;" asp-for="Designation">
                                            <option value="">Select your designation..</option>
                                            <option value="1">Admin</option>
                                            <option value="2">User</option>
                                            <option value="3">Manager</option>
                                            <option value="4">Supervisor</option>
                                    </select>                                                                       
                                    <span class="text-danger" asp-validation-for="FullName"></span>
                                </div>
                                    <div class="form-login">
                                        <label>Email</label>
                                        <div class="form-addons">
                                    <input type="text" asp-for="Email" placeholder="Enter your email address"  img src="~/img/icons/mail.svg" alt="img" />
                                            <span class="text-danger">@TempData["IsEmailexist"]</span>
                                        </div>
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-login">
                                        <label>Password</label>
                                        <div class="pass-group">
                                            <input type="password" asp-for="Password" class="pass-input"  placeholder="Enter your password">
                                            <span class="fas toggle-password fa-eye-slash"></span>
                                        </div>
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    
                                    <div class="form-login">
                                        <button class="btn btn-login" type="submit" >Sign Up</button>
                                    </div>
                            </form>
                            <div class="signinform text-center">
                                <h4>Already a user? <a asp-action="SignIn" asp-controller="Pages" class="hover-a">Sign In</a></h4>
                            </div>
                            <div class="form-setlogin">
                                <h4>Or sign up with</h4>
                            </div>
                            <div class="form-sociallink">
                                <ul>
                                    <li>
                                        <a href="javascript:void(0);">
                                            <img src="~/img/icons/google.png" class="me-2" alt="google">
                                            Sign Up using Google
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);">
                                            <img src="~/img/icons/facebook.png" class="me-2" alt="google">
                                            Sign Up using Facebook
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="login-img">
                        <img src="~/img/login.jpg" alt="img"/>
                    </div>
                </div>
			</div>
        </div>
		<!-- /Main Wrapper -->
		
		<!-- jQuery -->
        <script src="~/js/jquery-3.6.0.min.js"></script>

        <!-- Feather Icon JS -->
		<script src="~/js/feather.min.js"></script>
		
		<!-- Bootstrap Core JS -->
        <script src="~/js/bootstrap.bundle.min.js"></script>
		
		<!-- Custom JS -->
		<script src="~/js/script.js"></script>
		
    </body>
