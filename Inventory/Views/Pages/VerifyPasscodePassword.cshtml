@{
    Layout = null;
}
@model Inventory.Core.VerifyPassword

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, invoice, html5, responsive, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Login - Pos admin template</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/style.css">

</head>
<body class="account-page">


    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <div class="account-content">
            <div class="login-wrapper">
                <div class="login-content">
                    <div class="login-userset ">
                        <div class="login-logo">
                            <img src="~/img/logo.png" alt="img" />
                        </div>
                        <div class="login-userheading">
                            <h3>Forgot password?</h3>                            
                            <h4>
                                Don’t warry! it happens. Please enter the address <br>
                                associated with your account.
                            </h4>
                        </div>
                        <form asp-action="VerifyPasscodePassword" asp-controller="Pages" onsubmit="validateForm();" method="post">
                            <div class="form-login" id="Emaildiv">
                                <label>Email</label>
                                <div class="form-addons">
                                    <input id="Emailid" asp-for="Email" type="email" readonly="readonly">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                    <img src="~/img/icons/mail.svg" alt="img" />
                                </div>
                            </div>
                            <div  class="form-login" id="Passcodediv">
                                <label>Passcode</label>
                                <div class="form-addons">
                                    <input id="Passocdevalue" asp-for="Passcode" type="number"  placeholder="Enter your Passcode">
                                    <span asp-validation-for="Passcode" class="text-danger"></span>
                                </div>
                            </div>
                            <div id="Passworddiv" class="form-login" style="display:none">
                                <label>Password</label>
                                <div class="form-addons">
                                    <input id="Passwordvalue" asp-for="Password" type="password" placeholder="Enter your Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div id="ConfirmPassworddiv" class="form-login" style="display:none">
                                <label>Confirm Password</label>
                                <div class="form-addons">
                                    <input id="confirmpassword" asp-for="ConfirmPassword" type="password" re placeholder="Enter your Confirm Password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    
                                </div>
                            </div>
                            <div id="submitdiv" class="form-login" style="display:none">
                                <button class="btn btn-login" id="verifybutton" type="button" onclick="validateforgotform();">Verify Passcode</button>
                                <input type="submit" value="Verify Passcode" style="display:none;" id="savenewpass" />
                            </div>
                        </form>
                        <div id="outsubmitdiv" class="form-login">
                            <button class="btn btn-login" onclick="VerifyPasscoe(@TempData["Passcode"]);" type="submit">Submit</button>
                        </div>
                        
                        
                            <div class="alreadyuser">
                                <h4><a class=" hover-a" onclick="ReSendPasscode();">ReSend Passcode</a></h4>
                            </div>
                        

                    </div>
                </div>
                <div class="login-img">
                    <img src="~/img/login.jpg" alt="img" />
                </div>
            </div>
        </div>
    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/js/jquery-3.6.0.min.js"></script>

    <!-- Feather Icon JS -->
    <script src="~/js/feather.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/script.js"></script>
    <script src="~/js/site.js"></script>

</body>
